{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["src/node/**/*", "src/services/**/*", "src/utils/**/*"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}